---
import Layout from '@/layouts/Layout.astro'
import Container from '@/components/Container.astro'
import FeaturedCard from '@/components/FeaturedCard.astro'
import HeroSection from './_sections/Hero.astro'
import FooterSection from './_sections/Footer.astro'
---

<Layout title="NutriaSoft">
  <HeroSection />

  <Container
    center
    class="mt-16 flex items-start justify-start gap-5 overflow-scroll pb-4 lg:mx-auto lg:justify-center lg:overflow-hidden"
  >
    <FeaturedCard img="/images/phone12.svg" label="mobile development" title="explore our apps" />
    <FeaturedCard img="/images/phone12.svg" label="software on demand" title="discover our software" />
    <FeaturedCard img="/images/phone12.svg" label="website development" title="navigate our websites" />
    <FeaturedCard img="/images/phone12.svg" label="mobile development" title="explore our apps" />
  </Container>
  <FooterSection />
</Layout>
