---
import type { IconName } from 'virtual:icon'

import Icon from '@/components/Icon.astro'
import Link from '@/components/Link.astro'
import Layout from '@/layouts/Layout.astro'
import services from '@/data/services.json'
import products from '@/data/products.json'
import Image from '@/components/Image.astro'
import Input from '@/components/Input.astro'
import Button from '@/components/Button.astro'
import Footer from '@/components/Footer.astro'
import Container from '@/components/Container.astro'
import ServiceCard from '@/components/ServiceCard.astro'
import ProductCard from '@/components/ProductCard.astro'
---

<Layout title="NutriaSoft">
  <Container unlimited class="bg-[url(/images/dots.svg)]">
    <Container as="section" class="grid-cols-2 items-center pt-12 md:grid md:pt-32 lg:grid-cols-[1.25fr_1fr]">
      <Container unlimited as="article" class="flex flex-col gap-y-8 text-center md:text-left">
        <h1 class="mx-auto max-w-lg text-pretty text-4xl font-semibold leading-tight md:mx-0">
          We Make Your <span class="relative">
            Software
            <Icon name="short-underline" class="absolute -left-2 top-4 -z-10 w-44 text-primary" />
          </span>With
          <span class="relative">
            The Best Technologies
            <Icon name="long-underline" class="absolute -left-2 top-4 -z-10 hidden w-[424px] text-primary lg:block" />
          </span>
        </h1>
        <p class="text-balance text-base text-slate-600">
          We specialize in creating software solutions according to your needs, we manage from Infrastructure Solutions,
          to Web and Mobile Application Development from start to finish.
        </p>
        <Container unlimited class="flex flex-col gap-3 sm:flex-row">
          <Input id="client-email" placeholder="contactme@mail.com" required />
          <Button id="we-contact-you" variant="compact" label="We contact you" class="min-w-40" />
        </Container>
      </Container>
      <Image fetchpriority="high" alt="Nutrialez" width={440} height={276} src="/images/otter.svg" />
    </Container>

    <Container as="section" class="flex gap-x-6 overflow-x-auto pt-20 md:pt-44 lg:justify-between lg:gap-x-0">
      {
        services.data.map(({ content, icon, link, title }) => (
          <ServiceCard {content} icon={icon as IconName} {link} {title} />
        ))
      }
    </Container>

    <Container
      as="section"
      class="grid w-full items-center pt-28 md:grid-cols-[302px_auto] lg:grid-cols-[444px_auto] lg:justify-between"
    >
      <Container unlimited as="article" class="flex w-full flex-col gap-y-14">
        <Container unlimited class="flex flex-col gap-y-4">
          <h2 class="text-[2.5rem] font-bold leading-tight">Your Needs, Your Terms</h2>
          <p class="text-pretty text-base text-slate-600">
            Embrace flexibility with our on-demand services. We adapt to your requirements, delivering solutions when
            you need them, ensuring your journey is as dynamic as your goals.
          </p>
        </Container>
        <Link to="#" class="btn btn-primary flex w-max items-center gap-x-2 text-lg font-semibold">
          Get to know us more
          <Icon name="chevron" size={24} />
        </Link>
      </Container>
      <Image
        lazy
        alt="Statistics Dashboard"
        width={505}
        height={365}
        src="/images/statistics-dashboard-1.png"
        class="hidden md:block"
      />
    </Container>

    <Container
      as="section"
      class="grid w-full items-center justify-between gap-x-8 pt-20 md:grid-cols-[auto_302px] lg:grid-cols-[auto_444px]"
    >
      <Image
        lazy
        alt="Statistics Dashboard"
        width={505}
        height={365}
        src="/images/statistics-dashboard-2.png"
        class="hidden md:block"
      />
      <Container unlimited as="article" class="flex w-full flex-col gap-y-14">
        <Container unlimited class="flex flex-col gap-y-4">
          <h2 class="text-[2.5rem] font-bold leading-tight">Your Needs, Your Terms</h2>
          <p class="text-pretty text-base text-slate-600">
            Embrace flexibility with our on-demand services. We adapt to your requirements, delivering solutions when
            you need them, ensuring your journey is as dynamic as your goals.
          </p>
        </Container>
        <Link to="#" class="btn btn-primary flex w-max items-center gap-x-2 text-lg font-semibold">
          Get to know us more
          <Icon name="chevron" size={24} />
        </Link>
      </Container>
    </Container>

    <Container unlimited as="section" class="relative pt-40">
      <Container>
        <h3 class="text-center text-4xl font-semibold leading-tight">Checkout our products</h3>
        <Container unlimited as="section" class="grid grid-cols-[repeat(auto-fit,minmax(320px,1fr))] gap-8 pt-8">
          {products.data.map((data) => <ProductCard {...data} />)}
        </Container>
      </Container>
      <Container
        unlimited
        class="absolute left-0 right-0 top-1/2 z-30 hidden h-1/2 w-full place-items-center bg-gradient-to-t from-white via-white to-transparent xl:grid"
      >
        <Link to="#" class="btn btn-compact">Go to marketplace</Link>
      </Container>
    </Container>
  </Container>

  <Footer />
</Layout>
