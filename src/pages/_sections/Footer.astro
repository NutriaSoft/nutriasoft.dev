---
import Container from '@/components/Container.astro'
import Icon from '@/components/Icon.astro'
import Link from '@/components/Link.astro'
import Text from '@/components/Text.astro'

const footerIconsLinks = [
  {
    url: '#',
    icon: 'facebook'
  },
  {
    url: '#',
    icon: 'x'
  },
  {
    url: '#',
    icon: 'linkedin'
  },
  {
    url: '#',
    icon: 'github'
  }
]

const footerListLinks = [
  {
    title: 'products',
    url: '#'
  },
  {
    title: 'Company',
    url: '#'
  },
  {
    title: 'legal',
    url: '#'
  },
  {
    title: 'support',
    url: '#'
  }
]
---

<Container as="footer" class="mt-52 flex h-56 flex-col items-center space-y-11 px-8 py-2.5">
  <ul class="flex flex-row items-center gap-16">
    {
      footerListLinks.map((link) => (
        <li>
          <Link class="text-sm  font-normal capitalize leading-normal text-slate-700" to={link.url}>
            {link.title}
          </Link>
        </li>
      ))
    }
  </ul>

  <ul class="flex gap-12">
    {
      footerIconsLinks.map((link) => (
        <li>
          <a href={link.url}>
            <Icon name={link.icon} size={20} class="text-slate-700 drop-shadow-sm" />
          </a>
        </li>
      ))
    }
  </ul>
  <Text class="text-sm font-normal capitalize leading-normal text-slate-500">
