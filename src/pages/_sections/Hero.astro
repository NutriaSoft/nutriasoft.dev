---
import Title from '@/components/Title.astro'
import Text from '@/components/Text.astro'
import Button from '@/components/Button.astro'
import Container from '@/components/Container.astro'
---

<Container class="mt-12 w-full px-2 md:px-8">
  <Container center class="md:grid md:grid-cols-[1fr,_200px] md:justify-center md:gap-x-[6%] lg:grid-cols-2">
    <article
      class="mx-auto grid max-w-[668px] grid-flow-row auto-rows-min justify-items-center gap-y-8 text-pretty text-center md:justify-items-start md:text-balance md:text-pretty md:text-left"
    >
      <Title class="text-4xl lg:text-[3.25rem]/none">Get to know the best version of your company</Title>
      <Text class="font-medium text-gray-100">
        We use design as our vessel to empower brands committed to environmental causes.
      </Text>
      <div class="flex w-full flex-col items-start gap-y-6 md:flex-row md:gap-x-7 md:gap-y-0">
        <Button text="Give us a call" />
        <Button text="Get to know us" variant="secondary" />
      </div>
    </article>

    <article class="hidden md:relative md:block">
      <picture>
        <source media="(max-width: 1200px)" srcset="/images/phone-preview.png" />
        <source media="(min-width: 1200px)" srcset="/images/ipad-mini-preview.png" class="w-full" />
        <img src="/images/phone-preview.png" class="mx-auto" />
      </picture>
    </article>
  </Container>
</Container>
