---
import Title from '@/components/Title.astro'
import Text from '@/components/Text.astro'
import Link from '@/components/Link.astro'
import Button from '@/components/Button.astro'
---

<section class="relative mt-16 w-full px-2 lg:px-8">
  <div class="max-w-screen-xl lg:mx-auto lg:grid lg:grid-cols-2 lg:justify-center lg:gap-x-4">
    <article
      class="mx-auto grid max-w-[668px] grid-flow-row auto-rows-min justify-items-center gap-y-8 text-pretty text-center sm:text-balance lg:justify-items-start lg:self-center lg:text-pretty lg:text-left"
    >
      <Title>Get to know the best version of your company</Title>
      <Text class="text-gray-100">
        We use design as our vessel to empower brands committed to environmental causes.
      </Text>
      <div class="flex flex-col gap-y-6 items-center lg:flex-row lg:gap-y-0 lg:gap-x-7">
        <Button text="Give us a call" />
        <Button text="Get to know us" variant="secondary" class="hidden lg:block" />
        <Link styled to="/" class="lg:hidden">Get to know us more</Link>
      </div>
    </article>
    <article class="hidden lg:relative lg:block">
      <img alt="iPad Mini" src="/images/ipad-mini-preview.png" class="max-h-[850px] w-full" />
    </article>
  </div>
</section>
