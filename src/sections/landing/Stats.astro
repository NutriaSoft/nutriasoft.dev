---
const stats = [
  {
    title: 'Clients',
    value: '+10'
  },
  {
    title: 'Developments',
    value: '15'
  },
  {
    title: 'Products',
    value: '3'
  },
  {
    title: 'Partners',
    value: '5'
  }
]
---

<section class="py-12 sm:pb-8 sm:pt-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:max-w-none">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight text-black dark:invert sm:text-4xl">Our Experience</h2>
        <!-- <p class="mt-4 text-lg leading-8 text-gray-600">Lorem ipsum dolor sit amet consect adipisicing possimus.</p> -->
      </div>
      <dl class="mt-8 grid grid-cols-1 gap-0.5 overflow-hidden rounded-2xl text-center sm:grid-cols-2 lg:grid-cols-4">
        {
          stats.map(({ title, value }) => (
            <div class="flex flex-col bg-gray-400/10 p-8">
              <dt class="text-sm font-semibold leading-6 text-gray-600">{title}</dt>
              <dd class="order-first text-3xl font-semibold tracking-tight text-black dark:invert">{value}</dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</section>
