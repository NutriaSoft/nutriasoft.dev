---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'img'> {
  size?: number
  circle?: boolean
  src: string
}

const { size = 32, width, height, circle, class: extraClass, ...restProps } = Astro.props
const _class = {
  'rounded-full ': circle
}
---

<img width={width ?? size} height={height ?? size} class:list={[_class, extraClass]} {...restProps} />
