---
interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<div
  class="flex w-[30%] flex-col items-start justify-center rounded-xl border-2 border-solid border-[color:var(--slate-300,#CBD5E1)] px-3.5 py-6"
>
  <div class="flex h-[46px] w-[89px] shrink-0 flex-col rounded-xl bg-slate-400"></div>
  <h1 class="mt-3 text-2xl font-semibold text-slate-900">{title}</h1>
  <div class="mt-2 self-stretch text-sm text-slate-800">{description}</div>
</div>
