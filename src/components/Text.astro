---
import type { HTMLAttributes, HTMLTag } from 'astro/types'

interface Props extends Omit<HTMLAttributes<'p'>, 'slot'> {
  as?: Extract<HTMLTag, 'p' | 'span' | 'strong' | 'label'>
}

const { as: Tag = 'p', class: extraClass } = Astro.props

const styling = {
  label: 'text-sm text-slate-600',
  p: '',
  span: '',
  strong: ''
}
---

<Tag class:list={[extraClass, styling[Tag]]}>
  <slot />
</Tag>
