---
import Image from '@/components/Image.astro'
import Title from '@/components/Title.astro'
import Text from '@/components/Text.astro'
import type { HTMLAttributes } from 'astro/types'
import Container from './Container.astro'

interface Props extends HTMLAttributes<'div'> {
  title: string
  subtitle: string
  imageSrc: string
}

const { title, subtitle, imageSrc, class: extraClass } = Astro.props
---

<article class:list={['flex items-start gap-3 md:justify-center', extraClass]}>
  <Image circle title="yigsvnsla" size={64} src={imageSrc} />
  <Container center={false} as="div" class="my-auto flex flex-col gap-1">
    <Title class="text-xl">{title}</Title>
    <Text class="text-base text-gray-500">{subtitle}</Text>
  </Container>
</article>
