---
import type { HTMLAttributes, HTMLTag } from 'astro/types'

interface Props extends Omit<HTMLAttributes<'section'>, 'slot'> {
  as?: Extract<HTMLTag, 'section' | 'article' | 'footer' | 'nav' | 'div'>
  center?: boolean
  id?: string
}

const { as: Tag = 'div', center = false, class: extraClass, id = '' } = Astro.props
---

<Tag class:list={[{ 'mx-auto w-full max-w-7xl px-8': center || Tag === 'section' }, extraClass]} id={id}>
  <slot />
</Tag>
