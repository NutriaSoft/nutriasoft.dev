---
import type { HTMLAttributes, HTMLTag } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  as?: HTMLTag
  unlimited?: boolean
}

const { as: Tag = 'div', unlimited = false, class: extraClass, ...props } = Astro.props
---

<Tag {...props} class:list={[{ 'mx-auto max-w-6xl px-6': !unlimited }, extraClass]}>
  <slot />
</Tag>
