---
import type { HTMLAttributes, HTMLTag } from 'astro/types'

interface Props extends Omit<HTMLAttributes<'h2'>, 'slot'> {
  as?: Extract<HTMLTag, 'h2' | 'h3' | 'h4' | 'h5' | 'h6'>
}

const { as: Tag = 'h2', class: extraClass } = Astro.props
---

<Tag class:list={['text-[1.625rem] font-black md:text-[2.5rem]', extraClass]}>
  <slot />
</Tag>
