---
import Link from '@/components/Link.astro'
import Image from '@/components/Image.astro'
import Container from '@/components/Container.astro'

interface Props {
  alt: string
  link: string
  title: string
  content?: string
  imageUrl?: string | null
}

const { alt, link, title, content, imageUrl: src } = Astro.props
---

<Container unlimited class="rounded-xl border border-slate-300 bg-transparent bg-white hover:bg-primary">
  <Link external to={link} class="grid gap-y-3 px-4 py-6">
    {
      src ? (
        <Image {alt} {src} width={44} height={44} class="size-11 rounded-xl" />
      ) : (
        <Container unlimited class="size-11 rounded-xl bg-slate-400" />
      )
    }
    <Container unlimited class="grid gap-y-2">
      <h4 class="text-2xl font-semibold">{title}</h4>
      <p class="text-sm leading-tight text-slate-800">{content}</p>
    </Container>
  </Link>
</Container>
