---
import { SEO } from 'astro-seo'

interface Props {
  title: string
  description?: string
}

const {
  title,
  description = 'We specialize in creating software solutions according to your needs, we manage from Infrastructure Solutions, to Web and Mobile Application Development from start to finish'
} = Astro.props
---

<SEO
  title={title}
  description={description}
  openGraph={{
    basic: {
      title: 'NutriaSoft.dev ðŸ¦¦',
      type: 'website',
      image: 'https://res.cloudinary.com/drxx5lhyz/image/upload/v1728499804/nutria_ejzvfy.png'
    }
  }}
  extend={{
    // extending the default link tags
    link: [
      { rel: 'apple-touch-icon', href: 'favicon.png' },
      { rel: 'icon', type: 'image/png', sizes: '32x32', href: 'favicon.png' }
    ],

    // extending the default meta tags
    meta: [
      { name: 'theme-color', content: '#1F1F1F' },
      { name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    ]
  }}
/>
